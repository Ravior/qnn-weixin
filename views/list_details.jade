html
  head
    meta(charset='UTF-8')
    meta(name='viewport' content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0")
    title Details
    link(rel='stylesheet' href='/stylesheets/weixin.css')
  body
    .msg-wrapper
      .msg-container
        - each item, index in list
          a.msg-item(href=item[3])
            - if (index == 0)
              span.msg-big-img
                img(src=item[2])
                span.msg-big-img-text= item[0]
            - else if (item[2])
              span.msg-text= item[0]
              span.msg-img
                img(src=item[2])
